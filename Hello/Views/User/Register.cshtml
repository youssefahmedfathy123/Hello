@model RegisterVM



@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center text-primary my-4">Create an Account</h2>



<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Register" method="post" class="shadow p-4 rounded bg-light">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label text-dark fw-bold"></label>
                <input asp-for="Name" class="form-control border-dark" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label text-dark fw-bold"></label>
                <input asp-for="Email" class="form-control border-primary" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label text-dark fw-bold"></label>
                <input asp-for="UserName" class="form-control border-info" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label text-dark fw-bold"></label>
                <input asp-for="Password" class="form-control border-warning" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label text-dark fw-bold"></label>
                <input asp-for="ConfirmPassword" class="form-control border-success" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary w-100">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
